import { gql } from 'https://deno.land/x/graphql_tag@0.0.1/mod.ts'

export const typeDefs =gql`
type Coche{
    id:String!
    model:String!
    matricula:String!
    precio:Int!
    vendedor:Vendedor!
}

type Vendedor{
    id:String!
    nombre:String!
    apellido:String!
    coches:[Coche]!
    concesionario:Concesionario!
}

type Concesionario{
    vendedores:[Vendedor]!
    id:String!
    direccion:String!
}

type Query {
    getCoche(id:String!):Coche
    getCoche(min:Int!,max:Int!):[Coche]!
    getVendedor(id:String!)
    getVendedor(nombre:String!)
    getConcesionario(id:String!)
} 

type Mutation{
    addVendedor(nombre:String!,apellido:String!):Vendedor
    addCoche(matricula:String!,modelo:String!,precio:Int!):Coche
    asignarCoche(idCoche:String!,idVendedor:String!):Vendedor
    asignarVendedor(idVendedor:String!,idConcesionario:String!):Concesionario
    addConcesionario(direccion:String!):Concesionario
}
`;